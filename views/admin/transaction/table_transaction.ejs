<div style="margin-top: 2%;">
  <div class="row">
    <div  class="col-lg-3">
      <label>Transaksi</label>
      <h4 id="totalTransaksi">
        <%= trans.length %>
      </h4>
    </div>
  
    <div class="col-lg-3">
      <label >Total Penjualan Kotor</label>
      <h4  id="totalPenjualan" >
        <% let sum = 0 ;%>
