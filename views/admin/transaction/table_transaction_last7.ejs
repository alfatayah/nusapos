
<!-- Gimana caranya sorting array based on date transaction? -->
<!-- data yang di sort berupa beberapa object yang di dalem nya terdapat array -->
<!-- beberapa object itu gue push ke dalem array dan baru di sorting  -->
<!-- sorting nya itu di kasih if dan flagging last 7 days dari index nya aja -->

<% for (let x = 0; x < allData.length; x++) { %> 
  <% let dateTransaksi = moment().subtract(x, 'days').format('DD-MMM-YY')%> 
  <div class="tab-pane fade show active" id="show-kasbon" role="tabpanel" aria-labelledby="home-tab">
    <div class="row">
      <div class="col-auto mr-auto font-weight-bold text-primary">Tanggal :</div>
      <div class="col font-weight-bold text-primary"><%= dateTransaksi%> </div>
      <div class="col-auto font-weight-bold text-primary">Total :</div>
      <div id="total<%= x+1 %>"     class="col-auto font-weight-bold text-primary"> </div>
   
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable<%= x+1 %>" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>No</th>
                <th>No Invoice</th>
                <th>Kasir</th>
                <th>Status</th>
                <th>No Member</th>
                <th>Member</th>
                <th>Payment</th>
                <th>Date</th>
                <th>Jaminan</th>
                <th>Total</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
               <%  for(let i=0; i < allData[x].length; i++) { %>
                <tr>
                  <td>
                    <%= i + 1 %>
                  </td>
                  <td>
                    <%= allData[x][i].invoice%>
                  </td>
                  <td>
                    <%= user.username %>
                  </td>
                  <td class="m-0 font-weight-bold text-success">
                    <%= allData[x][i].status %>
                  </td>
                  <td>
                    <%= allData[x][i].member_Id.no_member %>
                  </td>
                  <td>
                    <%= allData[x][i].member_Id.name %>
                  </td>
                  <td>
                    <%= allData[x][i].payment_method %>
                  </td>
                  <td>
                    <%= allData[x][i].date_transaction %>
                  </td>
                  <td>
                    <%= allData[x][i].jaminan %>
                  </td>
                  <td>
                    <%= allData[x][i].total %>
                  </td>
                  <td>
                    <a href="/admin/transaction/detail/<%= allData[x][i].transdetail_id %> "
                      class="btn btn-success btn-circle btn-sm button-update">
                      <i class="fas fa-eye"></i></a>
                    <% if ( user.status==="SPV" && allData[x][i].status==="NOT_DONE" ) { %>
                      <a href="javascript:void()" type="button" class="btn btn-success btn-circle btn-sm button-cancel"
                        data-id="<%= allData[x][i]._id %>">
                        <i class="fas fa-window-close"></i></a>
                      <% } %>
                        <a href="/admin/transaction/print_transaction/<%= allData[x][i].transdetail_id %>  "
                          class="btn btn-success btn-circle btn-sm button-update">
                          <i class="fas fa-print"></i></a>
                  </td>
                 
                </tr>
                <% }%>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
<%} %> 





 


