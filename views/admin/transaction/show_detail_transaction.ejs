<!-- Bootstrap Date-Picker Plugin -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script> 

  <script>
    $(function () {
      $('#dateline').datepicker({
        format: "dd-M-yy",
        todayHighlight: 'TRUE',
        autoclose: true,
        minDate: 0,
        starend_date: new Date(),
        maxDate: '+1Y+6M'
      }).on('changeDate', function (ev) {
        $('#end_date').datepicker('setStarend_date', $("#dateline").val());
      });
    });

    $(function () {
      $('#due_date').datepicker({
        format: "dd-M-yy",
        todayHighlight: 'TRUE',
        autoclose: true,
        minDate: 0,
        starend_date: new Date(),
        maxDate: '+1Y+6M'
      }).on('changeDate', function (ev) {
        $('#end_date').datepicker('setStarend_date', $("#due_date").val());
      });
    });
  </script>

<script>
  // fungsi ini untuk passing data id transaction dan total bayar ke halaman payment cash
  $('#allbutton').on('click', '.tunai', function () {
    let total = $(this).data('total');
    let transaction_id = $(this).data('transaction_id');
    $('.id_transaction').val(transaction_id);
    $('.btnTunai').val(total);
  })
</script>




