
<script>
    
    for (let i = 1; i < 9; i++) {
        var table = "table" + i;
        table = $('#dataTable' + i).DataTable();
        var sum = "sum" + i;
        sum = 0;
        table.rows().every(function () {
            var data = this.data();
            sum += parseInt(data[9]);
        });
        var reverse = sum.toString().split('').reverse().join(''),
            ribuan = reverse.match(/\d{1,3}/g);
        ribuan = ribuan.join('.').split('').reverse().join('');

        document.getElementById('total' + i).innerHTML = "Rp "+ ribuan;

    }
</script>